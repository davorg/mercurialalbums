[% page_title = "Albums" %]
<h1>Albums</h1>
<ul class="album-list">
[% FOREACH a IN albums %]
  <li class="album">
    <div class="meta">
[%   IF a.is_winner %]<span class="badge">Winner</span>[% END %]
    <a href="[% a.url_path %]/">[% a.title %]</a>
    by <a href="[% a.artist.url_path %]/">[% a.artist.name %]</a>
    â€” <a href="[% a.year.url_path %]/">[% a.year.year %]</a>
    </div>

    <p class="buy">[% amazon_button(a) %]</p>
  </li>
[% END %]
</ul>
